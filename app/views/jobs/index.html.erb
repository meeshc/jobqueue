<p align="center" id="notice"><%= notice %></p>
<div id="box">
  <h1>Jobs</h1>

  <hr width=0%>
  <table align="center">
    <thead>
      <tr>
        <% if Job.exists? %>
          <th>Job</th>
          <th>Url</th>
          <th>Status</th>
          <th>Result</th>
          <th colspan="3"></th>
        <% else  %>
          <p align="center">Nothing has been queued up yet. Enter a URL to begin!</p>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.job_id %></td>
          <td><%= job.url %></td>
          <td><%= job.status %></td>
          <td>
            <% if job.status == "Incomplete" %>
              Show
            <% else %>
              <b><%= link_to 'Show', job %></b>
            <% end %>
          </td>
          <td><b><%= link_to 'Edit', edit_job_path(job) %></b></td>
          <td><b><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></b></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div align="center"><c><%= link_to 'New Job', new_job_path %> </c></div>
</div>