<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Url</th>
      <th>Status</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_id %></td>
        <td><%= job.url %></td>
        <td><%= job.status %></td>
        <td>
          <% if job.status == "Incomplete" %>
            Show
          <% else %>
            <%= link_to 'Show', job %>
          <% end %>
        </td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

